{% schema %}
{
  "name": "Product Review Widget",
  "target": "section",
  "stylesheet": "style.css",
  "javascript": "script.js",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_image_reviews",
      "label": "Display only reviews with photos",
      "default": false
    },
    {
        "type": "checkbox",
        "id": "show_all_reviews",
        "label": "Show reviews from all products",
        "default": true
    },
    {
      "type": "range",
      "id": "no_of_review_per_page",
      "min": 1,
      "max": 20,
      "step": 1,
      "label": "Number of reviews to display",
      "default": 10
    },
    {
        "type": "checkbox",
        "id": "hide_product_thumbnails",
        "label": "Hide product thumbnails",
        "default": false
    }


  ]
}
{% endschema %}